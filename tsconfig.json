{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "./dist"
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
}